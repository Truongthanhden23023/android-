local player = game.Players.LocalPlayer
local playerGui = player:WaitForChild("PlayerGui")
local userInputService = game:GetService("UserInputService")

-- üñ•Ô∏è T·∫°o ScreenGui
local screenGui = Instance.new("ScreenGui")
screenGui.Parent = playerGui

-- üè¥‚Äç‚ò†Ô∏è Toggle UI Button
local toggleButton = Instance.new("ImageButton")
toggleButton.Parent = screenGui
toggleButton.Size = UDim2.new(0.07, 0, 0.07, 0)
toggleButton.Position = UDim2.new(0.92, 0, 0.02, 0) -- B√™n ph·∫£i
toggleButton.BackgroundTransparency = 1
toggleButton.Image = "rbxassetid://7072718367" -- Icon b·∫≠t/t·∫Øt UI

-- üî§ H√†m t·∫°o TextLabel
local function createLabel(text, position)
    local label = Instance.new("TextLabel")
    label.Parent = screenGui
    label.Size = UDim2.new(0.3, 0, 0.05, 0)
    label.Position = position
    label.Text = text
    label.TextScaled = true
    label.Font = Enum.Font.SourceSansBold
    label.BackgroundTransparency = 1
    label.TextXAlignment = Enum.TextXAlignment.Left
    return label
end

-- üñºÔ∏è H√†m t·∫°o Icon
local function createIcon(imageId, position)
    local icon = Instance.new("ImageLabel")
    icon.Parent = screenGui
    icon.Size = UDim2.new(0.06, 0, 0.06, 0)
    icon.Position = position
    icon.BackgroundTransparency = 1
    icon.Image = "rbxassetid://129964146720519" .. imageId
    return icon
end

-- üèóÔ∏è T·∫°o UI
local dayIcon = createIcon("7072718367", UDim2.new(0.01, 0, 0.02, 0)) -- Icon ng√†y ch∆°i
local daysLabel = createLabel("Ng√†y ch∆°i: " .. player.AccountAge, UDim2.new(0.08, 0, 0.02, 0))
local fpsLabel = createLabel("FPS: ƒêang ƒëo...", UDim2.new(0.02, 0, 0.1, 0))
local timeLabel = createLabel("Gi·ªù: ƒêang l·∫•y...", UDim2.new(0.02, 0, 0.18, 0))

-- üñ•Ô∏è Ki·ªÉm tra thi·∫øt b·ªã (PC, Mobile, iOS)
local platform = "Kh√¥ng x√°c ƒë·ªãnh"
if userInputService.TouchEnabled then
    if userInputService.GyroscopeEnabled then
        platform = "iOS"
    else
        platform = "Android"
    end
elseif userInputService.MouseEnabled then
    platform = "PC"
end

local deviceLabel = createLabel("Thi·∫øt b·ªã: " .. platform, UDim2.new(0.02, 0, 0.26, 0))

-- üé® Rainbow to√†n b·ªô UI
task.spawn(function()
    local hue = 0
    while task.wait(0.1) do
        hue = (hue + 10) % 360
        local rainbowColor = Color3.fromHSV(hue / 360, 1, 1)

        -- Rainbow t·∫•t c·∫£ text & icon
        for _, label in ipairs(screenGui:GetChildren()) do
            if label:IsA("TextLabel") then
                label.TextColor3 = rainbowColor
            elseif label:IsA("ImageLabel") then
                label.ImageColor3 = rainbowColor
            end
        end
    end
end)

-- ‚è≥ C·∫≠p nh·∫≠t FPS & Gi·ªù
task.spawn(function()
    while task.wait(1) do
        local fps = math.floor(1 / game:GetService("RunService").RenderStepped:Wait())
        fpsLabel.Text = "FPS: " .. fps
    end
end)
task.spawn(function()
    while task.wait(1) do
        timeLabel.Text = "Gi·ªù: " .. os.date("%H:%M:%S")
    end
end)

-- üîò Toggle UI khi b·∫•m icon
local uiVisible = true
toggleButton.MouseButton1Click:Connect(function()
    uiVisible = not uiVisible
    for _, child in ipairs(screenGui:GetChildren()) do
        if child ~= toggleButton then
            child.Visible = uiVisible
        end
    end
end)
