local player = game.Players.LocalPlayer
local playerGui = player:WaitForChild("PlayerGui")

-- T·∫°o ScreenGui
local screenGui = Instance.new("ScreenGui")
screenGui.Parent = playerGui

-- H√†m t·∫°o TextLabel
local function createLabel(text, position)
    local label = Instance.new("TextLabel")
    label.Parent = screenGui
    label.Size = UDim2.new(0.3, 0, 0.05, 0) -- Nh·ªè h∆°n ƒë·ªÉ n·∫±m b√™n tr√°i
    label.Position = position
    label.Text = text
    label.TextScaled = true
    label.Font = Enum.Font.SourceSansBold
    label.BackgroundTransparency = 1
    label.TextXAlignment = Enum.TextXAlignment.Left -- CƒÉn tr√°i
    return label
end

-- T·∫°o c√°c Label
local sellFruitLabel = createLabel("Android", UDim2.new(0.02, 0, 0.1, 0)) -- Rainbow
local fpsLabel = createLabel("FPS: ƒêang ƒëo...", UDim2.new(0.02, 0, 0.2, 0)) -- FPS
local timeLabel = createLabel("Gi·ªù: ƒêang l·∫•y...", UDim2.new(0.02, 0, 0.3, 0)) -- Gi·ªù hi·ªán t·∫°i

-- üåÄ Rainbow Text
task.spawn(function()
    local hue = 0
    while task.wait(0.1) do
        hue = (hue + 10) % 360
        sellFruitLabel.TextColor3 = Color3.fromHSV(hue / 360, 1, 1)
    end
end)

-- ‚ö° FPS Checker
task.spawn(function()
    while task.wait(1) do
        local fps = math.floor(1 / game:GetService("RunService").RenderStepped:Wait())
        fpsLabel.Text = "FPS: " .. fps
    end
end)

-- ‚è∞ C·∫≠p nh·∫≠t Gi·ªù
task.spawn(function()
    while task.wait(1) do
        local time = os.date("%H:%M:%S")
        timeLabel.Text = "Gi·ªù: " .. time
    end
end)
